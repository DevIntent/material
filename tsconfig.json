{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/demo*/**/*",
    "./scripts/*",
    "./config/*",
    "./docs/*",
    "./test/*",
    "./gulp/*",
    "./*.*"
  ]
}
